<h2 class="mt-5">Log In</h2>

<form class="login-form m-3 columns">
  <div class="field columns m-5">
    <div class="columns">
      <label for="email-login" class="label">Email:</label>
      <input type="text" id="email-login" class="input ml-4 is-small" />
    </div>
  </div>
  <div class="field columns m-5">
    <div class="columns ml-5">
      <label for="password-login" class="label">Password:</label>
      <input type="password" id="password-login" class="input ml-4 is-small" />
    </div>
  </div>
  <div>
    <button type="submit" class="button is-primary m-2 ml-4">login</button>
  </div>
</form>

<a href="/sign-up" class="login-signup">New Here? Sign Up!</a>

